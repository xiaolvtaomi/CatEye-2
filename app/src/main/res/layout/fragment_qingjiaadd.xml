<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:textedit="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <include layout="@layout/layout_normal_back_title"/>


    <com.cicinnus.cateye.view.TextSpinnerView
        android:id="@+id/tsv_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        textedit:left_text="请假类型"
        textedit:nesscery="true"
        textedit:right_hint=""
        textedit:right_color="@color/text_blue"
        textedit:liststr="@array/qingjialeixing"
        />

    <com.cicinnus.cateye.view.TextEditView
        android:id="@+id/tev_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        textedit:left_text="请假事由"
        textedit:right_color="@color/text_blue"
        android:layout_marginTop="1dp"
        textedit:nesscery="true"
        />

    <com.cicinnus.cateye.view.TextDatePickerView
        android:id="@+id/tdpv_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        textedit:left_text="开始时间"
        textedit:right_color="@color/text_blue"
        android:layout_marginTop="1dp"
        textedit:nesscery="true"
        textedit:right_hint="选择开始时间"
        />

    <com.cicinnus.cateye.view.TextDatePickerView
        android:id="@+id/tdpv_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        textedit:left_text="结束时间"
        textedit:right_color="@color/text_blue"
        android:layout_marginTop="1dp"
        textedit:nesscery="true"
        textedit:right_hint="选择结束时间"
        />



    <TextView
        android:id="@+id/tv_confirm"
        style="@style/tvBtn"
        android:text="完成"
        android:layout_marginTop="20dp"
        />



</LinearLayout>
